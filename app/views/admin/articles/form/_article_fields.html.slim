.form-group
  .row
    = f.label "#{language}_title", class: 'col-sm-2 col-md-2 control-label'
    .col-md-8.col-sm-10
      = f.text_field "#{language}_title", class: 'form-control'

.form-group
  .row
    = f.label "image", class: 'col-sm-2 col-md-2 control-label'
    .col-md-8.col-sm-10
      = f.file_field "image", 'data-type' => "image", rel: 'avatar'
      br
      - if @article_form.send("image").to_s.present?
        img height="100" width="100" data-source="image" src="#{@article_form.send("image").to_s}"
      - else
        img.hide height="100" width="100" data-source="image"
.form-group
  .row
    = f.label "#{language}_tag", class: 'col-sm-2 col-md-2 control-label'
    .col-md-8.col-sm-10
      = select_tag "article_#{language}_tags", options_for_article_tags(@article_form, language), class: "form-control", multiple: "multiple", 'data-type' => 'tags', 'data-lang'=>"#{language}", name: "article[#{language}_tags][]"
        

hr
.form-group
  .row
    = f.label "#{language}_short_description", class: 'col-sm-2 col-md-2 control-label'
    .col-md-8.col-sm-10
      = f.text_area "#{language}_short_description", class: 'form-control', rows: 2

hr
.form-group
  .row
    = f.label "#{language}_content", class: 'col-sm-2 col-md-2 control-label'
    .col-md-8.col-sm-10
      = f.text_area "#{language}_content", 'data-type' => 'editable', class: 'form-control', rows: 50

