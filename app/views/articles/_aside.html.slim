aside.col-md-4.blog-aside
  .aside-widget
    header
      h3 
        = I18n.t("views.articles.tags")

    .body.clearfix
      = display_tags_cloud_for params[:action], current_lang

  .aside-widget
    header
      h3 
        = I18n.t("views.articles.read_next")
    .body
      ul.tales-list
        - articles = Article.published(current_lang).limit(5)
        - articles = articles.where.not(id: @article.id) if @article
        - articles.each do |article|
          li
            = link_to article.get_content(current_lang).title, article
          
