<div class="row">    
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <h2><%= I18n.t('views.devise.forgot_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit I18n.t('helpers.submit.devise.send_reset_pass_instruction'), :class => 'btn btn-large btn-tales-two' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="col-md-1"></div>
</div>
